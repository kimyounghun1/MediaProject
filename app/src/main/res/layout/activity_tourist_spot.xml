<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/SpotImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/TourTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="여행지 이름"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        />

    <LinearLayout
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/location_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/location_imageview"
            android:src="@drawable/icon_location"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/location_textview"
            android:text="주소"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>


            <LinearLayout
                android:id="@+id/location2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/location2_imageview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_location" />

                <TextView
                    android:id="@+id/location2_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="주소2"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:background="#CCCCCC"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>


    <LinearLayout
        android:id="@+id/distance_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/distance_imageview"
            android:src="@drawable/icon_distance"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/distance_textview"
            android:text="거리"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/telephone_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/telephone_imageview"
            android:src="@drawable/icon_telephone"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/telephone_textview"
            android:text="전화번호"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/overview_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/overview_imageview"
            android:src="@drawable/icon_telephone"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/overview_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="개요"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />
    </LinearLayout>



    <LinearLayout
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/homepage_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homepage_imageview"
            android:src="@drawable/icon_telephone"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/homepage_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="홈페이지"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />
    </LinearLayout>



    <LinearLayout
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>