<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaluationActivity"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/foot_font_l"
        android:text="설문지" />

    <LinearLayout
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:layout_marginVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/foot_font_l"
        android:text="별점을 주세요!" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/EvaluationRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/EvaluationScope"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:textSize="30dp"
            android:text="0.0"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:fontFamily="@font/foot_font_l"
                android:text="1. 방문지만의 고유한 특성이 있었습니까?" />

            <RadioGroup
                android:id="@+id/Question1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/Question1_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />

                <RadioButton
                    android:id="@+id/Question1_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글쎄요" />

                <RadioButton
                    android:id="@+id/Question1_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니요" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:fontFamily="@font/foot_font_l"
                android:text="2. 방문지의 접근은 편리하였나요?" />

            <RadioGroup
                android:id="@+id/Question2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/Question2_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />

                <RadioButton
                    android:id="@+id/Question2_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글쎄요" />

                <RadioButton
                    android:id="@+id/Question2_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니요" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:fontFamily="@font/foot_font_l"
                android:text="3. 방문지에서 추가적인 비용이 발생하였나요?" />

            <RadioGroup
                android:id="@+id/Question3"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/Question3_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />

                <RadioButton
                    android:id="@+id/Question3_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글쎄요" />

                <RadioButton
                    android:id="@+id/Question3_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니요" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:fontFamily="@font/foot_font_l"
                android:text="4. 방문지에서의 경험에 만족하셨습니까?" />

            <RadioGroup
                android:id="@+id/Question4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/Question4_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />

                <RadioButton
                    android:id="@+id/Question4_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글쎄요" />

                <RadioButton
                    android:id="@+id/Question4_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니요" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:fontFamily="@font/foot_font_l"
                android:text="5. 방문지를 재방문하거나 주위에 추천하실 의향이 있으십니까?" />

            <RadioGroup
                android:id="@+id/Question5"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/Question5_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />

                <RadioButton
                    android:id="@+id/Question5_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글쎄요" />

                <RadioButton
                    android:id="@+id/Question5_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니요" />

            </RadioGroup>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/EvaluationLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_outline"
        android:text="평가하기"/>

</LinearLayout>