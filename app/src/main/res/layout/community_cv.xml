<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TourSearchCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/Community_ortherUserImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/nulluser" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/CommnitiyUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="email"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/CommnitiyCreateDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="date"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/CommnitiyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="description"
            android:textSize="15sp"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/CommnitiyUserImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars[0]" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/CommnityCheckedLike"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="5dp"
                    android:outlineAmbientShadowColor="@color/colorBlack"
                    app:srcCompat="@drawable/cheackbox_heart" />

                    <TextView
                        android:id="@+id/CommnitiyLikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HeartCount"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>

            </LinearLayout>

                <Button
                    android:id="@+id/CommnitiySetComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="댓글달기" />



            <ImageView
                android:id="@+id/CommunityDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/delete"/>


        </LinearLayout>

</androidx.cardview.widget.CardView>